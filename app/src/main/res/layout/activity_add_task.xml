<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable name="viewModel" type="com.thetrainingplan.viewmodels.MainViewModel"/>
        <variable name="AddTaskModel" type="com.thetrainingplan.models.AddTaskModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ActivityAddTask">

        <View
                android:id="@+id/add_task_goals_toolbar_fragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/add_task_goals_view"
                app:layout_constraintVertical_weight="0.1"
                android:background="@color/blue"
                />

        <ImageView
                android:id="@+id/add_task_goals_fragment_toolbar_profile_profile_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@+id/add_task_goals_toolbar_fragment"
                app:layout_constraintTop_toTopOf="@+id/add_task_goals_toolbar_fragment"
                app:layout_constraintBottom_toBottomOf="@+id/add_task_goals_toolbar_fragment"
                app:layout_constraintEnd_toStartOf="@+id/add_task_goals_fragment_toolbar_guide"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_keyboard_backspace_24px"
                android:tint="@color/light_grey"
                app:layout_constraintHorizontal_weight="0.3"
                android:onClick="@{() -> viewModel.finishAddTaskActivity()}"
                android:contentDescription="@string/app_name"
                />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/add_task_goals_fragment_toolbar_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.2"
                android:orientation="vertical"
                />

        <TextView
                android:id="@+id/add_task_goals_fragment_toolbar_profile_profile_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/add_task_goals_toolbar_fragment"
                app:layout_constraintEnd_toEndOf="@+id/add_task_goals_toolbar_fragment"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintHorizontal_weight="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/add_task"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="0.499"
                />

        <View
                android:id="@+id/add_task_goals_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/add_task_goals_toolbar_fragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_weight="0.9"
                android:background="@color/light_grey"
                />

        <androidx.cardview.widget.CardView
                android:id="@+id/add_task_card_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@+id/add_task_goals_view"
                app:layout_constraintStart_toStartOf="@+id/add_task_goals_view"
                app:layout_constraintEnd_toEndOf="@+id/add_task_goals_view"
                app:layout_constraintBottom_toBottomOf="@+id/add_task_goals_view"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="5dp"
                >

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                <TextView
                        android:id="@+id/add_task_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/task_name"
                        android:textColor="@color/blue"
                        android:textSize="16sp"/>

                <EditText
                        android:id="@+id/add_task_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/add_task_name_title"
                        app:layout_constraintStart_toStartOf="@+id/add_task_name_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp"
                        android:inputType="textCapSentences"
                        android:autofillHints="Enter task name"
                        tools:ignore="LabelFor" />

                <TextView
                        android:id="@+id/add_event_description_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/add_task_name"
                        app:layout_constraintStart_toStartOf="@+id/add_task_name_title"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/blue"
                        android:text="@string/task_description"
                        android:textSize="16sp"/>

                <EditText
                        android:id="@+id/add_task_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/add_event_description_title"
                        app:layout_constraintStart_toStartOf="@+id/add_task_name_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp"
                        android:inputType="textCapSentences"
                        android:autofillHints="Enter task description"
                        tools:ignore="LabelFor" />

               <Button
                        android:id="@+id/add_task_start_date_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/add_task_description"
                        app:layout_constraintStart_toStartOf="@id/add_task_name_title"
                        app:layout_constraintEnd_toStartOf="@+id/add_task_end_date_title"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/white_button_blue_border"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:text="@string/set_start_date"
                        android:textAllCaps="false"
                       />

                <Button
                        android:id="@+id/add_task_end_date_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/add_task_description"
                        app:layout_constraintEnd_toEndOf="@+id/add_task_description"
                        app:layout_constraintStart_toEndOf="@+id/add_task_start_date_title"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:background="@drawable/white_button_blue_border"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:text="@string/set_end_date"
                        android:textAllCaps="false"
                        android:visibility="@{viewModel.addTaskState != 1 ? View.VISIBLE : View.GONE}"
                        />

                <TextView
                        android:id="@+id/add_task_repeat_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/add_task_start_date_title"
                        app:layout_constraintStart_toStartOf="@id/add_task_name_title"
                        android:layout_marginTop="10dp"
                        android:text="@string/repeating_task"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        />

                <RelativeLayout
                        android:id="@+id/add_event_repeat_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/add_task_description"
                        app:layout_constraintStart_toStartOf="@id/add_task_name_title"
                        app:layout_constraintTop_toBottomOf="@id/add_task_repeat_title"
                        android:minHeight="50dp"
                        android:gravity="center">

                    <info.hoang8f.android.segmented.SegmentedGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            segmentedgroup:sc_border_width="1dp"
                            segmentedgroup:sc_corner_radius="5dp"
                            segmentedgroup:sc_tint_color="@color/blue">

                        <RadioButton
                                android:id="@+id/add_event_never"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/never"
                                style="@style/RadioButton"
                                android:width="10dp"
                                android:checked="true"
                                android:onClick="@{() -> viewModel.setState(viewModel.ADD_TASK_NEVER)}"
                                />

                        <RadioButton
                                android:id="@+id/add_event_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/daily"
                                style="@style/RadioButton"
                                android:width="10dp"
                                android:onClick="@{() -> viewModel.setState(viewModel.ADD_TASK_DAILY)}"
                                />

                        <RadioButton
                                android:id="@+id/add_event_week"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/weekly"
                                style="@style/RadioButton"
                                android:width="10dp"
                                android:onClick="@{() -> viewModel.setState(viewModel.ADD_TASK_WEEKLY)}"
                                />

                        <RadioButton
                                android:id="@+id/add_event_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/monthly"
                                style="@style/RadioButton"
                                android:width="10dp"
                                android:onClick="@{() -> viewModel.setState(viewModel.ADD_TASK_MONTHLY)}"
                                />

                        <RadioButton
                                android:id="@+id/add_event_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/annually"
                                style="@style/RadioButton"
                                android:width="10dp"
                                android:onClick="@{() -> viewModel.setState(viewModel.ADD_TASK_ANNUALLY)}"
                                />
                    </info.hoang8f.android.segmented.SegmentedGroup>

                </RelativeLayout>

                <TextView
                        android:id="@+id/add_task_every_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/add_event_repeat_type"
                        app:layout_constraintStart_toStartOf="@id/add_event_description_title"
                        android:textColor="@color/blue"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:text="@string/every"
                        android:visibility="@{viewModel.addTaskState != 1 ? View.VISIBLE : View.GONE}"
                        />

                <EditText
                        android:id="@+id/add_task_every"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/add_task_every_title"
                        app:layout_constraintBottom_toBottomOf="@+id/add_task_every_title"
                        app:layout_constraintTop_toTopOf="@+id/add_task_every_title"
                        android:layout_marginStart="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:inputType="numberDecimal"
                        android:background="@drawable/white_button_blue_border"
                        android:visibility="@{viewModel.addTaskState != 1 ? View.VISIBLE : View.GONE}"
                        android:autofillHints="Enter a number of days"
                        tools:ignore="LabelFor" />

                <TextView
                        android:id="@+id/add_task_inc_dec_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/add_task_inc_dec"
                        app:layout_constraintBottom_toBottomOf="@+id/add_task_inc_dec"
                        app:layout_constraintEnd_toStartOf="@+id/add_task_inc_dec"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:text="@string/days"
                        android:visibility="@{viewModel.addTaskState != 1 ? View.VISIBLE : View.GONE}"
                        />

                <RelativeLayout
                        android:id="@+id/add_task_inc_dec"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/add_task_every_title"
                        app:layout_constraintTop_toTopOf="@+id/add_task_every_title"
                        app:layout_constraintEnd_toEndOf="@id/add_task_description"
                        android:minHeight="50dp"
                        android:gravity="center">

                    <info.hoang8f.android.segmented.SegmentedGroup
                            android:id="@+id/add_task_days_increment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            segmentedgroup:sc_border_width="1dp"
                            segmentedgroup:sc_corner_radius="5dp"
                            segmentedgroup:sc_tint_color="@color/blue"
                            android:visibility="@{viewModel.addTaskState != 1 ? View.VISIBLE : View.GONE}"
                            >

                        <RadioButton
                                android:id="@+id/add_event_minus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/minus"
                                android:padding="0dp"
                                style="@style/RadioButton"
                                />

                        <RadioButton
                                android:id="@+id/add_event_plus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add"
                                style="@style/RadioButton" />
                    </info.hoang8f.android.segmented.SegmentedGroup>

                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/add_event_repeat_day"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/add_task_every"
                        app:layout_constraintEnd_toEndOf="@+id/add_task_inc_dec"
                        app:layout_constraintBottom_toTopOf="@id/add_task_submit"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:minHeight="0dp"
                        android:gravity="center">

                    <info.hoang8f.android.segmented.SegmentedGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            segmentedgroup:sc_border_width="1dp"
                            segmentedgroup:sc_corner_radius="5dp"
                            segmentedgroup:sc_tint_color="@color/blue"
                            android:visibility="@{viewModel.addTaskState == 3 ? View.VISIBLE : View.GONE}"
                            >

                        <CheckBox
                                android:id="@+id/add_event_mon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mon"
                                style="@style/RadioButton"
                                android:width="1dp"
                                />

                        <CheckBox
                                android:id="@+id/add_event_tue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tues"
                                style="@style/RadioButton"
                                android:width="1dp" />

                        <CheckBox
                                android:id="@+id/add_event_wed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/wed"
                                style="@style/RadioButton"
                                android:width="1dp" />

                        <CheckBox
                                android:id="@+id/add_event_thu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/thurs"
                                style="@style/RadioButton"
                                android:width="1dp" />

                        <CheckBox
                                android:id="@+id/add_event_fri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/fri"
                                style="@style/RadioButton"
                                android:width="1dp" />

                        <RadioButton
                                android:id="@+id/add_event_sat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sat"
                                style="@style/RadioButton"
                                android:width="1dp" />

                        <CheckBox
                                android:id="@+id/add_event_sun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sun"
                                style="@style/RadioButton"
                                android:width="1dp" />
                    </info.hoang8f.android.segmented.SegmentedGroup>

                </RelativeLayout>


                <TextView
                        android:id="@+id/add_task_to_which_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/add_task_every_title"
                        app:layout_constraintStart_toStartOf="@+id/add_task_every_title"
                        app:layout_constraintEnd_toStartOf="@+id/add_event_repeat_day"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:text="@string/set_task_to_a_goal"
                        />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/add_task_to_which_goal_recycler_view"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/add_task_to_which_goal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/add_event_repeat_day"
                        app:layout_constraintBottom_toTopOf="@+id/add_task_submit"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        />


                <Button
                        android:id="@+id/add_task_submit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/add_task_to_which_goal_recycler_view"
                        app:layout_constraintStart_toStartOf="@id/add_task_description"
                        app:layout_constraintEnd_toEndOf="@id/add_task_description"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/blue_button"
                        android:text="@string/submit_task"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        />

                        <!--
                <TextView
                        android:id="@+id/add_event_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/add_event_start_date_title"
                        app:layout_constraintStart_toStartOf="@id/add_event_name_title"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="30dp"
                        android:textSize="20sp"
                        android:text="Set Start Date"
                        android:background="#ffffffff"
                        android:textColor="@color/light_blue"/>

                <TextView
                        android:id="@+id/add_event_end_date_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/add_event_start_date"
                        app:layout_constraintStart_toStartOf="@id/add_event_name_title"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/blue"
                        android:text="Last Day"
                        android:textSize="20sp"/>

                <TextView
                        android:id="@+id/add_event_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/add_event_end_date_title"
                        app:layout_constraintStart_toStartOf="@id/add_event_name_title"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="30dp"
                        android:textSize="20sp"
                        android:text="Set End Date"
                        android:background="#ffffffff"
                        android:textColor="@color/light_blue"/>

                <Button
                        android:id="@+id/add_event_save"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@color/ssRed"
                        android:layout_margin="20dp"
                        android:text="Save"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:padding="10dp"/>

                <ProgressBar
                        android:id="@+id/add_event_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintStart_toStartOf="@id/add_event_save"
                        app:layout_constraintEnd_toEndOf="@id/add_event_save"
                        app:layout_constraintTop_toTopOf="@id/add_event_save"
                        app:layout_constraintBottom_toBottomOf="@id/add_event_save"/>

                <TextView
                        android:id="@+id/add_event_repeat_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/add_event_start_date_title"
                        app:layout_constraintStart_toStartOf="@id/add_event_repeat_type"
                        android:text="Repeat"
                        android:textSize="20sp"
                        android:textColor="@color/blue"/>

                <RelativeLayout
                        android:id="@+id/add_event_repeat_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/add_event_start_date"
                        app:layout_constraintBottom_toBottomOf="@id/add_event_start_date"
                        android:layout_marginEnd="30dp"
                        android:minHeight="80dp"
                        android:gravity="center">

                    <info.hoang8f.android.segmented.SegmentedGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            segmentedgroup:sc_border_width="1dp"
                            segmentedgroup:sc_corner_radius="5dp"
                            segmentedgroup:sc_tint_color="@color/blue">

                        <RadioButton
                                android:id="@+id/add_event_never"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Never"
                                style="@style/RadioButton"
                                android:width="90dp"
                                android:checked="true"
                                />

                        <RadioButton
                                android:id="@+id/add_event_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily"
                                style="@style/RadioButton"
                                android:width="90dp" />

                        <RadioButton
                                android:id="@+id/add_event_week"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weekly"
                                style="@style/RadioButton"
                                android:width="90dp" />

                        <RadioButton
                                android:id="@+id/add_event_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Monthly"
                                style="@style/RadioButton"
                                android:width="90dp" />

                        <RadioButton
                                android:id="@+id/add_event_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Annually"
                                style="@style/RadioButton"
                                android:width="90dp" />
                    </info.hoang8f.android.segmented.SegmentedGroup>

                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/add_event_inc_dec"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/add_event_repeat_type"
                        android:layout_marginEnd="30dp"
                        android:minHeight="80dp"
                        android:gravity="center">

                    <info.hoang8f.android.segmented.SegmentedGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            segmentedgroup:sc_border_width="1dp"
                            segmentedgroup:sc_corner_radius="5dp"
                            segmentedgroup:sc_tint_color="@color/blue">

                        <RadioButton
                                android:id="@+id/add_event_minus"
