<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_activity_navigation"
        tools:context=".MainActivityNavigation"
        >

    <include
            android:id="@+id/shop_title_bar"
            layout="@layout/title_bar"
            />

    <EditText
            android:id="@+id/shop_search_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/shop_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_title_bar"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:layout_marginEnd="20dp"
            android:hint="Search Parts"
            android:inputType="text"
            />

    <SearchView
            android:id="@+id/shop_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/shop_search_bar"
            app:layout_constraintBottom_toBottomOf="@+id/shop_search_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/shop_search_bar"
            android:layout_marginStart="20dp"
            />

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shop_search_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <View
                    android:id="@+id/shop_heading_1_start"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    app:layout_constraintStart_toStartOf="@+id/shop_stock_in_machine_recycler"
                    app:layout_constraintEnd_toStartOf="@id/shop_heading"
                    app:layout_constraintTop_toTopOf="@id/shop_heading"
                    app:layout_constraintBottom_toBottomOf="@id/shop_heading"
                    android:background="@color/ssRed"
                    />

            <TextView
                    android:id="@+id/shop_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/shop_heading_1_start"
                    app:layout_constraintEnd_toStartOf="@+id/shop_heading_number"
                    android:paddingBottom="30dp"
                    android:paddingTop="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginStart="10dp"
                    android:text="AVAILABLE STOCK IN MACHINE"
                    android:textColor="@color/nka_red"
                    android:textSize="14sp"
                    />

            <TextView
                    android:id="@+id/shop_heading_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/nka_red"
                    app:layout_constraintStart_toEndOf="@id/shop_heading"
                    app:layout_constraintTop_toTopOf="@id/shop_heading"
                    app:layout_constraintBottom_toBottomOf="@id/shop_heading"
                    app:layout_constraintEnd_toStartOf="@+id/shop_heading_1_end"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="#1001"
                    />

            <View
                    android:id="@+id/shop_heading_1_end"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    app:layout_constraintEnd_toEndOf="@+id/shop_stock_in_machine_recycler"
                    app:layout_constraintStart_toEndOf="@id/shop_heading_number"
                    app:layout_constraintTop_toTopOf="@id/shop_heading_number"
                    app:layout_constraintBottom_toBottomOf="@id/shop_heading_number"
                    android:background="@color/registration_page_backgrounf"
                    />

            <LinearLayout
                    android:id="@+id/shop_stock_in_machine_recycler"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/shop_heading"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical"
                    />
            <View
                    android:id="@+id/shop_heading_2_line_start"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    app:layout_constraintStart_toStartOf="@+id/shop_stock_in_machine_recycler"
                    app:layout_constraintEnd_toStartOf="@id/shop_heading_2"
                    app:layout_constraintBottom_toBottomOf="@id/shop_heading_2"
                    app:layout_constraintTop_toTopOf="@id/shop_heading_2"
                    android:layout_marginEnd="10dp"
                    android:background="@color/registration_page_backgrounf"
                    />

            <TextView
                    android:id="@+id/shop_heading_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/shop_stock_in_machine_recycler"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="30dp"
                    android:text="AVAILABLE FOR NEXT DAY DELIVERY"
                    android:textColor="@color/nka_red"
                    android:textSize="14sp"
                    />

            <View
                    android:id="@+id/shop_heading_2_line_end"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    app:layout_constraintStart_toEndOf="@id/shop_heading_2"
                    app:layout_constraintEnd_toEndOf="@+id/shop_stock_in_machine_recycler"
                    app:layout_constraintTop_toTopOf="@id/shop_heading_2"
                    app:layout_constraintBottom_toBottomOf="@id/shop_heading_2"
                    android:layout_marginStart="10dp"
                    android:background="@color/registration_page_backgrounf"
                    />

            <LinearLayout
                    android:id="@+id/shop_next_day_delivery_recycler"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/shop_heading_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical"
                    android:overScrollMode="never"/>

        </android.support.constraint.ConstraintLayout>


    </ScrollView>


</android.support.constraint.ConstraintLayout>